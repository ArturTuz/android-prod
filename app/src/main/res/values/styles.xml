<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/spotIm_blue</item>
        <item name="colorPrimaryDark">@color/spotIm_blue</item>
        <item name="colorAccent">@color/spotIm_blue</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpotIMTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/spotIm_blue</item>
        <item name="trackTint">@color/gray</item>
        <item name="colorControlActivated">@color/spotIm_blue</item>
        <item name="thumbTint">@color/spotIm_blue</item>
        <!--<item name="android:thumb">@drawable/switch_thumb</item>-->
    </style>
</resources>
